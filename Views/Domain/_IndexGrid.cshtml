@using NonFactors.Mvc.Grid
@using pline.Tools
@model IQueryable<TblDomain>

@(Html
.Grid(Model)
.Build(columns =>
{
columns.Add(model => model.Domain).Titled("Domain");
columns.Add(model => model.Description).Titled("Description");
columns.Add().Titled("Details").RenderedAs(model =>{
return Html.ActionLink("Details","Details","Domain",new {id = model.Id},new {@class="btn btn-success btn-sm"});
});
columns.Add().Titled("Edit").RenderedAs(model =>{
return Html.ActionLink("Edit","Edit","Domain",new {id = model.Id},new {@class="btn btn-warning btn-sm"});
});
columns.Add().Titled("Delete").Encoded(false).RenderedAs(model =>{
return PlineHelper.ActiveLinkAjax($"javascript:DeleteItem({model.Id})","Delete","btn btn-danger btn-sm");
});
})
.Using(GridFilterMode.Row)
.Empty("No data found")
.Filterable()
.Sortable()
.Pageable(pager =>
{
pager.PageSizes = new Dictionary<Int32, String> {{ 10, "10" }, { 20, "20" }, { 50, "50" } , { 0, "All" }};
pager.ShowPageSizes = true;
pager.PagesToDisplay = 5;
pager.CurrentPage = 1;
pager.RowsPerPage = 10;
})
.Css("table table-secondary table-striped")
//(model=>new {@class="table-dark"})
)

